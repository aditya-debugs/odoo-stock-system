{
  "name": "mern-postgres-app",
  "version": "1.0.0",
  "description": "MERN stack application with PostgreSQL",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "client": "npm run dev --workspace=client",
    "server": "npm run dev --workspace=server",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "install:all": "npm install && npm install --workspace=client && npm install --workspace=server"
  },
  "keywords": [
    "mern",
    "postgresql",
    "react",
    "express",
    "nodejs"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
